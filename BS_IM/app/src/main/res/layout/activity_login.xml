<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".controller.Activity.LoginActivity">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@mipmap/icon"/>
    <LinearLayout
        android:id="@+id/user"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/user_icon"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/user_user"
            android:text="账号"
            android:textColor="@color/black_deep"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/user_edit"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/password"
        android:layout_below="@+id/user"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/password_password"
            android:text="密码"
            android:textColor="@color/black_deep"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:textSize="20sp"
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <CheckBox
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/cb_login_displaypassword"
        android:layout_below="@+id/password"
        android:text="显示密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="登录"
        android:layout_margin="10dp"
        android:id="@+id/bt_login"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cb_login_displaypassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_register"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/bt_return_password"
            android:text="找回密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>